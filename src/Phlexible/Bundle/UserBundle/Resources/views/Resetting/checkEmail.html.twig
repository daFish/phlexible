{% extends "PhlexibleUserBundle::layout.html.twig" %}

{% block phlexible_user_content %}
    <script type="text/javascript">
        //<![CDATA[
        Ext.onReady(function () {
            win = Ext.create('Phlexible.user.security.SendEmailWindow', {
                title: "{{ project.title }}",
                loginUrl: "{{ path("fos_user_security_login") }}",
                backToLoginText: "{{ 'login.back_to_login'|trans({}, 'PhlexibleUserBundle') }}",
                checkEmail: true,
                checkEmailText: "{{ 'resetting.check_email'|trans({'%email%': email}, 'FOSUserBundle') }}"
            });
            win.show();
        });
        //]]>
    </script>
{% endblock %}

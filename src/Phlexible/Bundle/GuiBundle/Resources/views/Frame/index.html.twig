<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="de" lang="de">
<head>
    <title>{{ appTitle }} - {{ projectTitle }}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=8; IE=7" />
    <link href="{{ extjs('/resources/css/ext-all.css') }}" media="screen" rel="stylesheet" type="text/css" />
    {% if theme and theme != "default" %}
        <link id="theme" href="{{ extjs('/resources/css/xtheme-' ~ theme ~ '.css') }}" media="screen" rel="stylesheet" type="text/css" />
    {% endif %}
    <link href="{{ path("asset_css") }}" media="screen" rel="stylesheet" type="text/css" />
    <link href="{{ path("asset_icons") }}" media="screen" rel="stylesheet" type="text/css" />
    <style type="text/css">
        #loading{
            position: absolute;
            left: 45%;
            top: 40%;
            padding: 2px;
            z-index: 20001;
            height: auto;
            border: 1px solid #ccc;
        }
        #loading a {
            color:#225588;
        }
        #loading .loading-indicator{
            background:white;
            color:#444;
            font:bold 13px tahoma,arial,helvetica;
            padding:10px;
            margin:0;
            height:auto;
        }
        #loading-msg {
            font: normal 10px arial,tahoma,sans-serif;
        }
    </style>
</head>
<body>
<div id="loading" style="display: block">
    <div class="loading-indicator"><img alt="Loading..." src="{{ component("/phlexiblegui/images/loading-large.gif") }}" width="32" height="32" style="margin-right:8px;float:left;vertical-align:top;"/>{{ appTitle }} {{ appVersion }}- <a href="http://{{ appUrl }}" target="_blank">{{ appUrl }}</a><br /><span id="loading-msg">Loading...</span></div>
</div>
<noscript>{{ noScript }}</noscript>
</body>
<script type="text/javascript" src="{{ extjs('/adapter/ext/ext-base.js') }}"></script>
{% if debug %}
    <script type="text/javascript" src="{{ extjs('/ext-all-debug.js') }}"></script>
{% else %}
    <script type="text/javascript" src="{{ extjs('/ext-all.js') }}"></script>
{% endif %}
<script type="text/javascript" src="{{ extjs("/locale/ext-lang-" ~ language ~ ".js") }}"></script>
<script type="text/javascript">
    //<![CDATA[
    Ext.BLANK_IMAGE_URL = "{{ component("/phlexiblegui/images/blank.gif") }}";
    Ext.QuickTips.init();
    var Phlexible = {
        title: "{{ appTitle }}",
        version: "{{ appVersion }}",
        project: "{{ projectTitle }}",
        baseUrl: "{{ baseUrl }}",
        basePath: "{{ basePath }}",
        componentsPath: "{{ componentsPath }}"
    };
    //]]>
</script>
{{ scripts|raw }}
<script type="text/javascript" src="{{ path("asset_translations", {language: language}) }}"></script>
<script type="text/javascript" src="{{ path("asset_scripts") }}"></script>
<script type="text/javascript" src="{{ path("gui_routes") }}"></script>
<script type="text/javascript">
    //<![CDATA[
    Ext.onReady(function() {
        Phlexible.Frame = new Phlexible.gui.util.Frame();
    });
    //]]>
</script>
</html>
